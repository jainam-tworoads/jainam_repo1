pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                '''
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Test Passed"'
            }
        }
        stage('Deploy1') {
            steps {
                retry(3) {
		    catchError(buildResult: 'FAILURE', stageResult: 'FAILURE'){
		    	sh 'echo "Inside Deploy1 Stage"'
                    	sh 'ssh dvcinfra@10.23.5.26 "/home/dvcinfra/jainam/exp_26/sample_bash.sh"'
		    }
                }
            }
        }
	stage('Deploy2'){
		when {
               		expression { currentBuild.resultIsWorseOrEqualTo('FAILURE') }
                }

		steps{
			sh 'echo "Inside Deploy2 Stage"'
		}
	}
	stage('Deploy3'){
		when {
                        expression { currentBuild.resultIsBetterOrEqualTo('FAILURE') }
                }

		steps{
			sh 'echo "Inside Deploy3 stage"'
		}
	}
    }
    post {
          always {
              echo 'This will always run'
          }
          success {
              echo 'This will run only if successful'
          }
          failure {
              echo 'This will run only if failed'
          }
          unstable {
              echo 'This will run only if the run was marked as unstable'
          }
          changed {
              echo 'This will run only if the state of the Pipeline has changed'
              echo 'For example, if the Pipeline was previously failing but is now successful'
          }
    }
}
